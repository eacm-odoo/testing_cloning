<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_quant_package_form_inherit_cjglobal" model="ir.ui.view">
        <field name="name">stock.quant.package.inherit.cjglobal</field>
        <field name="model">stock.quant.package</field>
        <field name="inherit_id" ref="stock.view_quant_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="before">
                <label for="length" string="Pallet Length"/>
                <div>
                    <field name="length" class="oe_inline"/>
                    <field name="length_uom_name" nolabel="1" class="oe_inline" style="margin-left:5px"/>
                </div>
                <label for="width" string="Pallet Width"/>
                <div>
                    <field name="width" class="oe_inline"/>
                    <field name="length_uom_name" nolabel="1" class="oe_inline" style="margin-left:5px"/>
                </div>
                <label for="height" string="Pallet Height"/>
                <div>
                    <field name="height" class="oe_inline"/>
                    <field name="length_uom_name" nolabel="1" class="oe_inline" style="margin-left:5px"/>
                </div>
                <label for="volume" string="Cubic Feet"/>
                <div>
                    <field name="volume" class="oe_inline"/>
                    <field name="volume_uom_name" nolabel="1" class="oe_inline" style="margin-left:5px"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
