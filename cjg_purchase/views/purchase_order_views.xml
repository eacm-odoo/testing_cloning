<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_view_inherit_cjglobal" model="ir.ui.view">
            <field name="name">purchase.order.form.view.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page//field[@name='order_line']/tree//field[@name='name']" position="after">
                    <field name='box_qty'/>
                    <field name='price_box'/>
                    <field name='case_pack'/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
